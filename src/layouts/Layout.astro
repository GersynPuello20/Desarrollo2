---
const { title } = Astro.props;
import { Icon } from 'astro-icon/components';

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<header class="h-16 bg-green-50 flex items-center ">
			<div class="container  flex flex-row justify-between ax-w-[1200px] mx-auto">
				<img src="/DuolingoLogo.svg" >
				<a class="relative group flex flex-row items-center hover:text-[#50d71e] font-extrabold uppercase text-gray-400" href="#">
					Idioma de la página
					<Icon name="mdi:chevron-down" />
					<div class="absolute top-6 hidden group-hover:block">
						<h1>1</h1><Icon name="flagpack:gp" />
						<h1>2</h1><Icon name="flagpack:gp" />
						<h1>3</h1><Icon name="flagpack:gp" />
						<h1>4</h1><Icon name="flagpack:gp" />
						
					</div>
				</a>
			</div>
		</header>
		<div class="flex justify-center mt-32 mx-auto">
			<div class="max-w-lg ">
				<img src="/duolingo-promo.svg" >
			</div>
			<div class="ml-500 flex items-center flex-col justify-center w-1/3 ">
				<h1 class="text-4xl text-center font-bold text-slate-700">
					¡La forma divertida, efectiva y gratis de aprender un idioma!
				</h1>
				<div class="mt-10 mb-4 hover:cursor-pointer hover:bg-[#98e25f] rounded-xl border-b-4 flex-col border-[#7fb159] text-white font-bold flex justify-center items-center w-80 h-12 bg-[#58CC02] ">
					<button>EMPIEZA AHORA</button>
				</div>
				<div class="hover:cursor-pointer hover:bg-[#f1f1f1] rounded-xl border-2 border-b-4 flex-col border-[#a5a5a5] text-[#1cb0f6] font-bold flex justify-center items-center w-80 h-12 bg-white ">
					<button>YA TENGO UNA CUENTA</button>
				</div>
				
			</div>
		</div>
		<Icon name="flagpack:gp" size={45}/>

		<slot />

	</body>
</html>
